.content {
  height: 70vh;
  width: 100vw;
  /* margin: 10px; */
}

.content image {
  width: 400rpx;
  height: 320rpx;
}

.content .title {
  width: auto;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: left;
  color: grey;
}

form .type {
  display: flex;
  flex-direction: row;
  justify-content: left;
  height: 50px;
  width: auto;
  text-align: center;
  margin-top: 15px;
}

form .type .label {
  font-size: 18px;
  margin-right: 10px;
}

form .type .block {
  width: 50px;
  height: 50px;
  margin: 5px;
  align-items: center;
  font-size: 10px;
  border-style: solid;
  border-width: 0rpx;
}

form .type .block .active {
  box-shadow: 1px 2px 4px 2px #DDDDDD;
  padding: 4px 2px 2px 2px;
}

form .type .block image {
  width: 20px;
  height: 20px;
}

form .type .block label {
  font-size: 10px;
}

.content .form {
  height: auto;
  width: auto;
  text-align: left;
  /* margin: 10px; */
}

.content .form .remark {
  height: 20vh;
  width: 90vw;
}

.content .form .name {
  height: 20px;
  width: 100vw;
  /* margin: 10px; */
}

.content .form .mobile {
  height: 20px;
  width: 100vw;
}

.footer {
  height: 10vh;
  width: 100vw;
  background-color: lightgray;
}

.float_window {
  position: fixed;
  width: 60px;
  height: auto;
  top: 60vh;
  left: 0px;
}

.float_window .call {
  width: 50px;
  height: 50px;
  background-color: #04BE02;
  margin-bottom: 2px;
  border-radius: 5px;
}

.float_window image {
  width: 30px;
  height: 30px;
  margin: 10px;
  border-radius: 5px;
  /* background-color: #1afa29; */
}

.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.title-sel {
  color: #24272c;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25vw;
}

.title-sel .line-style {
  background: #fff;
  height: 6rpx;
  width: 25vw;
  position: relative;
  margin-top: 10rpx;
}

.title-sel-selected {
  color: #04BE02;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25vw;
}

.title-sel-selected .line-style {
  background: #04BE02;
  height: 6rpx;
  width: 25vw;
  position: relative;
  margin-top: 10rpx;
}

.swiper {
  width: 90%;
  flex: 1;
  overflow: scroll;
  margin: 0 auto;
  height: 60vh;
}

.new-order-btn {
  border: 0px;
  background-color: #04BE02;
  color: white;
  border-radius: 5px;
  padding: 7px;
  text-align: center;
  width: 140px;
  font-size: 15px;
}

.new-order-btn:active {
  border: 0px;
  background-color: white;
  color: #04BE02;
  border-radius: 5px;
  padding: 7px;
  text-align: center;
  width: 140px;
  font-size: 15px;
}

.float_test {
  top: 100px;
  left: 0px;
  width: 50px;
  height: 50px;
  border-radius: 50px;
  position: fixed;
  background: #ff6700;
  line-height: 50px;
  font-size: 25pt;
  color: #fff;
}
